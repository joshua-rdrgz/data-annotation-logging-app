datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Log {
  id             String  @id @default(cuid())
  date           String
  projectName    String
  tasksCompleted Int
  minutesWorked  Int
  hourlyRate     Decimal @db.Decimal(4, 2)
  paidOut        Boolean @default(false)
  readyToPayOut  Boolean @default(false)
}
